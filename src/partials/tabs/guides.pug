.guides
  .pagewrap
    .sidebar
    .content
      .guide
        include ../guides/index
:sass
  .guide {
    
    iframe {
      display: flex;
      flex-direction: row;
      text-align: center;
      width: 100%;
      height: 800px;
    }

    h2 {
      padding-top: 1rem;
      border-top: 1px solid #333;
    }
      
    section {
      border-bottom: 1px solid #333;
      
      > a {
        display: block;
      }
      
      &:nth-child(1) {
      
        h1 {
          margin-top: 0;
        }
      }
    }
  }