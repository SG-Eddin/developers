:sass
  .portal {
    text-align: center;

    .banner,
    .content-shortcuts,
    .whitepaper {
      padding: 3rem 5rem;
    }

    .banner, .whitepaper {
      background: #004f80;
      color: white;
    }

    .text-block {
      max-width: 600px;
      margin: 0 auto 3em auto;
    }

    .banner-steps{
    
      .fa {
        font-size: 6rem;
      }
      
      .step-desc {
        margin-top: 2rem;
        font-size: 1.3rem;
      }
      
      ul {
        display: flex;
        justify-content: center;
      }
      
      li {
        width: 25%;
        margin: 2rem;

        .number {
          position: relative;
          border-radius: 50%;
          border: 5px solid white;
          width: 4rem;
          height: 4rem;
          text-align: center;
          margin: 0 auto 1rem auto;

          .number-text {
            position: relative;
            top: -.75rem;
            font-size: 3rem;
          }
        }
        &:nth-child(3) .number-text {
          top: -1rem;
        }
        
        .step-img {
          margin: 0 auto 1rem auto;
        }
      }
    }
    
    .content-shortcuts {
      text-align: left;
      
      .fa {
      font-size: 8rem;
      }

      img, label { display: block; }

      label {
        border-bottom: 3px solid #CCC;
      }

      ul, li {
        margin: 0;
        padding: 0;
      }

      > ul {
        display: flex;
        justify-content: center;
        
        > li {
          flex: 1;
          margin: 0 1rem;
        }
      }

      .shortcut-wrap {
          text-align: center;
      }

      .list-wrap {
        
        li {
          border-bottom: 1px solid #AAA;
          padding: 1rem 0;
        }
      }
    }
  }
