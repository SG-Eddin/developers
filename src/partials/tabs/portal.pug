:sass
  @import "node_modules/breakpoint-sass/stylesheets/_breakpoint.scss";
  $pair: 320px 794px;
  
  .portal {
    text-align: center;

    .pagewrap {

      .area-white,
      .area-lightgray {
        position: relative;
        z-index: 2;
        overflow: visible;
        // height: 350px;
      }

      .area-white { background: white; }
      .area-lightgray { background: #F6F6F8; }

      .area-white,
      .area-lightgray { * { color: #414141;} }

      .alpha {
        .banner-text  { top: -120px; width: 500px; }
        .banner-box .banner-text { top: 0px;}
      }

      .delta,
      .omega,
      .zeta {
        h2 {
          padding-top: 4rem;
        }
        .explainer-section {
          display: flex;
          justify-content: space-between;
          max-width: 850px;
          margin: auto;
          padding: 6rem 0;
          .exp-graphic {
            width: 250px;
            // background: gray;
          }
          .exp-text {
            width: 500px;
            text-align: left;
            p { margin-left: 0; }
          }
        }
      }

      .floatinglogo {
        position: fixed;
        top: -3%;
        left: 50%;
        margin-left: -30%; 
        background-image: url(img/logo-white-2x.svg);
        background-repeat: no-repeat;
        background-blend-mode: overlay;
        background-size: cover;
        width: 400px;
        height: 360px;
        z-index: 1;
        opacity: .06;
      }

      .banner-box {
        border: 1px solid #D8D8E4;
        width: 1000px;
        margin: auto;
        box-shadow: 0 0 4px 0 rgba(0,0,0,0.11);
        position: relative;
        top: -170px;
        z-index: 2;
        background: white;
        padding: 2rem;
      }

      .banner-text {
        position: relative;
        // top: -100px;
        // max-width: 450px;
        &.download {
          padding: 0 0 6rem 0;
          img{margin-right: 2rem;}
          p { margin: 2rem 0 ;}
        }
        margin: auto;
        h1 { }
      }

      .example-box {
        // border: 1px solid #D8D8E4;
        box-shadow: 0 0 4px 0 rgba(0,0,0,0.11);
        width: 920px;
        margin: auto;
        position: relative;
        top: -100px;
        .or {
          margin: 1rem 0;
        }
        .btn {
          // height: 27px;
          width: 250px;
          border-radius: 2px;
          background-color: #5C58CA;
          color: #FFFFFF;
          border-radius: 4px;
          padding: 1rem;
          border: none;
          font-size: 1rem;
        }
          .table { 
            width: 100%; 
            border: none;
            // overflow-x: hidden;
            pre, code, .thead { text-align: left; }
            pre { 
              margin: 0; 
              color: #939393;
              max-width: 100%;
            }
            .thead {
              .tr { display: flex; }
              .td{
                font-family: courier;
                background: white;
                border-bottom: 0.5px solid #DDDDE7;
              }
            }
            .tbody {
              .tr { display: flex; }
              .td { 
                .example-demo-wrap { 
                  overflow-x: hidden; 
                  pre { color: black; }
                }
                padding: 1rem !important; 
                background: white;
                width: 50%;
                min-height: 300px;

                .state-2a,
                .state-2b1,
                .state-2b2 { display: none; }
                
                .status-text,
                .user-data-text { text-align: left; margin: 1rem 0;}
                .status-user-box { 
                  border-radius: 4px; 
                  border: 0.5px solid #DDDDE7;
                  display: flex;
                  align-items: center;
                  padding: 1rem;
                  margin: 1rem 0;
                }
                .status-text { margin-top: 0; }
                .user-name { font-weight: bold; font-size: 1.3rem; }
                .user-pic { border-radius: 50%; margin-right: 1rem; }
                .user-data-payload {}

                code {
                  font-family: courier;
                  font-size: 14px;
                  width: 300px;
                  font-weight: bold;
                }
                &:first-child {
                  background: #F9F9F9;
                }
              }
            }
            .td:nth-child(1) { width: 50%; }
            .td:nth-child(2) { width: 50%; }
          }

      }

      h1 {
        font-size: 32px;
        width: 400px;
        margin: auto;
      }
      h2, h3, h4 {
        margin-top: 0;
      }

      .banner-text {
        margin-bottom: 0;
        padding-bottom: 1rem;
      }

      .splash{
        color: white;
        background: #34344F;
        position: relative;
        z-index: 1;
        .inner-row { margin-bottom: 200px !important; }
        
        .text-block { margin-bottom: 0; }

        .splash-focus{
          margin: auto;
          width: 80%;

          img { display: block; margin: auto;}
          img.logo { max-width: 200px; }
        }
      }

      .testdrive {
        background: #333;
        color: white;
        position: relative;
        z-index: 2;

        .testdrive-focus {
          margin: auto;
        }

        h1 {
          margin-bottom: 0;
        }

        .ex-wrap {
          display: flex;
          margin: auto;
          justify-content: center;

          #kqr {
            min-width: 300px;
            min-height: 307px;
          }

          .data-wrap { margin-right: 3rem; }

          .data-wrap, 
          .user-wrap { 
            display: none; 
          }
          
          #userProfileData {
            overflow: hidden !important;
            overflow-y: scroll !important;
            text-align: left;
            margin: 0;
            overflow: auto; 
            padding: .5rem;
            background: #222;
            border: 3px solid white;
            border-top-left-radius: 1rem;
            border-bottom-left-radius: 1rem;
            color: white;
            width: 300px;
            height: 300px;
          }
          .avatar-wrap {
            background: #333;
            border-radius: 50%;
            overflow: hidden;
            position: relative;
            border: 3px solid white;
          }
          .avatar { 
            background: #222; 
            display: block; 
            height: 300px;
            width: 300px;
          }
          .name {
            position: absolute;
            top: 70%;
            z-index: 1;
            background: rgba(0, 0, 0, 0.5);
            width: 100%;
          }
        }
      }
      
      .splash,
      .banner,
      .testdrive,
      .content-shortcuts {
        padding: 3rem 5rem;
        
        @include breakpoint($pair) {
          padding: 5% 5% !important;
        }
      }

      .banner {
        background: #3A3942;
        color: white;
      }

      .text-block {
        max-width: 650px;
        margin: 0 auto 3em auto;
      }

      .banner-steps{

        li a {
          display: flex;
        }

        * {
          // color: white;
          text-align: left;
          text-decoration: none;
        }
      
        img {
          display: inline-block;
          height: 75px;
          margin-right: 1rem;
        }

        .step-wrap {
          display: inline-block;
        }
        
        .step-title {
          margin-bottom: 1rem;
          font-size: 1.3rem;
          
          @include breakpoint($pair) {
            font-size: 1rem !important;
          }
        }
        
        ul {
          display: flex;
          justify-content: space-between;
          padding: 0;
          // margin: 2rem;
        }
        
        li {
          margin: .5rem;

          @include breakpoint($pair) {
            margin: 0rem !important;
            flex: 1 !important;
          }

          // @include breakpoint($pair) {}

          .number {
            position: relative;
            border-radius: 50%;
            border: 5px solid white;
            width: 4rem;
            height: 4rem;
            text-align: center;
            margin: 0 auto 1rem auto;

            .number-text {
              position: relative;
              top: -.50rem;
              font-size: 3rem;
            }
          }
          
          .step-img {
            margin: 0 auto 1rem auto;
          }
        }
      }
      
      .content-shortcuts {
        
        * { 
          text-align: left;
          color: #FFFFFF;
        }

        .logo { 
          height: 150px;
          // background: gray;
        }

        .inner-row,
        ul {
          display: flex;
          li ,
          li * {
            display: block;
          }
        }

        .inner-row { 
          justify-content: space-between;
          > ul > li {
            margin-left: 2rem;
          }
        }

        *[disabled] {
          color: gray;
          &:hover {
            text-decoration: none;
            cursor: no-drop;
          }
        }
        
        .fa {
        font-size: 8rem;
        }

        img, label { display: block; }


        ul, li {
          margin: 0;
          padding: 0;
        }

        ul, li { 
          margin-left: 2rem; 
          ul, li {
            margin-left: 0; 
          }
        }

        > ul {
          display: flex;
          justify-content: center;
          
          > li {
            flex: 1;
            margin: 0 1rem;
          }
        }

        .shortcut-wrap {
          text-align: center;
        }

        .list-wrap {
          li {
            a {
              padding: 1rem 0;
              display: block;
              font-size: .8rem;
              font-weight: 100;
            }
          }
        }
      }
    }
  }