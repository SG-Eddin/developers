:sass
  @import "node_modules/breakpoint-sass/stylesheets/_breakpoint.scss";
  $pair: 320px 794px;
  
  .portal {
    text-align: center;

    .floatinglogo {
      position: fixed;
      top: -3%;
      left: 50%;
      margin-left: -30%; 
      background-image: url(img/logo-white-2x.svg);
      background-repeat: no-repeat;
      background-blend-mode: overlay;
      background-size: cover;
      width: 400px;
      height: 360px;
      z-index: 1;
      opacity: .06;
    }

    h4 {
      font-size: 32px;
      width: 400px;
      margin: auto;
    }

    .splash{
      color: white;
      background: #34344F;
      .text-block {
        margin-bottom: 0;
      }
      // background-image: url(img/logo-white-2x.svg);
      // background-position: 30% 10%;    
      // background-repeat: no-repeat;
      // background-blend-mode: overlay;

      .splash-focus{
        margin: auto;
        width: 80%;

        img { display: block; margin: auto;}
        img.logo { max-width: 200px; }
      }
    }

    .testdrive {
      background: #333;
      color: white;
      position: relative;
      z-index: 2;

      .testdrive-focus {
        margin: auto;
      }

      h1 {
        margin-bottom: 0;
      }

      .ex-wrap {
        display: flex;
        margin: auto;
        justify-content: center;

        #kqr {
          min-width: 300px;
          min-height: 307px;
        }

        .data-wrap { margin-right: 3rem; }

        .data-wrap, 
        .user-wrap { 
          display: none; 
        }
        
        #userProfileData {
          overflow: hidden !important;
          overflow-y: scroll !important;
          text-align: left;
          margin: 0;
          overflow: auto; 
          padding: .5rem;
          background: #222;
          border: 3px solid white;
          border-top-left-radius: 1rem;
          border-bottom-left-radius: 1rem;
          color: white;
          width: 300px;
          height: 300px;
        }
        .avatar-wrap {
          background: #333;
          border-radius: 50%;
          overflow: hidden;
          position: relative;
          border: 3px solid white;
        }
        .avatar { 
          background: #222; 
          display: block; 
          height: 300px;
          width: 300px;
        }
        .name {
          position: absolute;
          top: 70%;
          z-index: 1;
          background: rgba(0, 0, 0, 0.5);
          width: 100%;
        }
      }
    }
    
    .splash,
    .banner,
    .testdrive,
    .content-shortcuts {
      padding: 3rem 5rem;
      
      @include breakpoint($pair) {
        padding: 5% 5% !important;
      }
    }

    .banner {
      background: #3A3942;
      color: white;
    }

    .text-block {
      max-width: 650px;
      margin: 0 auto 3em auto;
    }

    .banner-steps{

      * {
        color: white;
        text-decoration: none;
      }
    
      .fa {
        font-size: 6rem;
        
        @include breakpoint($pair) {
          font-size: 4rem !important;
        }
      }
      
      .step-desc {
        margin-top: 2rem;
        font-size: 1.3rem;
        
        @include breakpoint($pair) {
          font-size: 1rem !important;
        }
      }
      
      ul {
        display: flex;
        justify-content: center;
        padding: 0;
      }
      
      li {
        width: 25%;
        margin: 2rem;

        @include breakpoint($pair) {
          margin: 0rem !important;
          flex: 1 !important;
        }

        // @include breakpoint($pair) {}

        .number {
          position: relative;
          border-radius: 50%;
          border: 5px solid white;
          width: 4rem;
          height: 4rem;
          text-align: center;
          margin: 0 auto 1rem auto;

          .number-text {
            position: relative;
            top: -.50rem;
            font-size: 3rem;
          }
        }
        
        .step-img {
          margin: 0 auto 1rem auto;
        }
      }
    }
    
    .content-shortcuts {
      text-align: left;
      background: #eaeaea;

      *[disabled] {
        color: gray;
        &:hover {
          text-decoration: none;
          cursor: no-drop;
        }
      }
      
      .fa {
      font-size: 8rem;
      }

      img, label { display: block; }

      label {
        border-bottom: 3px solid #CCC;
      }

      ul, li {
        margin: 0;
        padding: 0;
      }

      > ul {
        display: flex;
        justify-content: center;
        
        > li {
          flex: 1;
          margin: 0 1rem;
        }
      }

      .shortcut-wrap {
          text-align: center;
      }

      .list-wrap {
        
        li {
          border-bottom: 1px solid #AAA;
          
          a {
            padding: 1rem 0;
            display: block;
          }
        }
      }
    }
  }
