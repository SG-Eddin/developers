:sass
  @import "node_modules/breakpoint-sass/stylesheets/_breakpoint.scss";
  $pair: 320px 794px;
  
  .portal {
    text-align: center;
    
    .pagewrap {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .banner,
    .content-shortcuts,
    .whitepaper {
      padding: 3rem 5rem;
      
      @include breakpoint($pair) {
        padding: 5% 5% !important;
      }
    }

    .banner, .whitepaper {
      background: #004f80;
      color: white;
    }

    .text-block {
      max-width: 600px;
      margin: 0 auto 3em auto;
    }

    .banner-steps{
    
      .fa {
        font-size: 6rem;
        
        @include breakpoint($pair) {
          font-size: 4rem !important;
        }
      }
      
      .step-desc {
        margin-top: 2rem;
        font-size: 1.3rem;
        
        @include breakpoint($pair) {
          font-size: 1rem !important;
        }
      }
      
      ul {
        display: flex;
        justify-content: center;
        padding: 0;
      }
      
      li {
        width: 25%;
        margin: 2rem;

        @include breakpoint($pair) {
          margin: 0rem !important;
          flex: 1 !important;
        }

        // @include breakpoint($pair) {}

        .number {
          position: relative;
          border-radius: 50%;
          border: 5px solid white;
          width: 4rem;
          height: 4rem;
          text-align: center;
          margin: 0 auto 1rem auto;

          .number-text {
            position: relative;
            top: -.50rem;
            font-size: 3rem;
          }
        }
        
        .step-img {
          margin: 0 auto 1rem auto;
        }
      }
    }
    
    .content-shortcuts {
      text-align: left;
      background: #eaeaea;
      
      .fa {
      font-size: 8rem;
      }

      img, label { display: block; }

      label {
        border-bottom: 3px solid #CCC;
      }

      ul, li {
        margin: 0;
        padding: 0;
      }

      > ul {
        display: flex;
        justify-content: center;
        
        > li {
          flex: 1;
          margin: 0 1rem;
        }
      }

      .shortcut-wrap {
          text-align: center;
      }

      .list-wrap {
        
        li {
          border-bottom: 1px solid #AAA;
          
          a {
            padding: 1rem 0;
            display: block;
          }
        }
      }
    }
  }
